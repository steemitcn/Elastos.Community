{
  "name": "EBP-backend",
  "version": "1.0.0",
  "scripts": {
    "start": "nodemon --config nodemon.json",
    "debug": "nodemon --config nodemon-debug.json",
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "tsc": "tsc || echo TSC compilation has errors.",
    "tslint": "tslint -c tslint.json -p tsconfig.json -t codeFrame",
    "start:production": "npm run build && NODE_ENV=production node dist/index.js",
    "unit": "NODE_ENV=dev jest --config test/unit/jest.conf.js --coverage",
    "test": "npm run unit"
  },
  "dependencies": {
    "@types/http-status": "0.2.30",
    "@types/optimist": "0.0.29",
    "bcrypt": "^1.0.3",
    "body-parser": "1.18.2",
    "connect-mongo": "^2.0.1",
    "connect-redis": "^3.3.3",
    "connect-timeout": "1.7.0",
    "cookie-parser": "1.4.3",
    "cookie-session": "^2.0.0-beta.3",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "express": "4.16.0",
    "express-jwt": "^5.3.0",
    "express-session": "^1.15.6",
    "fs-extra": "5.0.0",
    "helmet": "3.9.0",
    "http-status": "1.0.1",
    "lodash": "4.17.4",
    "mongoose": "^5.0.17",
    "morgan": "^1.9.0",
    "request": "^2.85.0"
  },
  "devDependencies": {
    "@types/chai": "4.0.6",
    "@types/connect-timeout": "^0.0.33",
    "@types/cucumber": "2.1.0",
    "@types/dotenv": "^4.0.1",
    "@types/express": "4.0.39",
    "@types/helmet": "0.0.37",
    "@types/jest": "^22.2.3",
    "@types/js-yaml": "3.10.1",
    "@types/mongoose": "^5.0.12",
    "jest": "^22.4.3",
    "nodemon": "1.12.7",
    "ts-jest": "^22.4.5",
    "ts-node": "3.3.0",
    "tslint": "5.8.0",
    "typescript": "2.3.3"
  },
  "engines": {
    "node": ">=9.10.0"
  }
}
